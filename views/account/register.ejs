<main id="register">
  <%- messages() %>

    <% if (errors) { %>
      <ul class="notice">
        <% errors.array().forEach(error=> { %>
          <li class="flash-message notice error">
            <%= error.msg %>
          </li>
          <% }) %>
      </ul>
      <% } %>

        <h1>
          <%= title %>
        </h1>
        <form id="registerForm" action="/account/register" method="post" class="register-form">

          <div class="form-group">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="account_firstname" placeholder="Enter your first name"
              value="<%= locals.account_firstname %>" required>
          </div>

          <div class="form-group">
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="account_lastname" placeholder="Enter your last name"
              value="<%= locals.account_lastname %>" required>
          </div>

          <div class="form-group">
            <label for="email">Email Address:</label>
            <input type="email" id="email" name="account_email" placeholder="Enter your email"
              value="<%= locals.account_email %>" required>
          </div>

          <div class="form-group">
            <label for="accountPassword">Password:</label>
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1
              special
              character</span>
            <input type="password" name="account_password" id="accountPassword" required
              pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
          </div>

          <div class="form-group">
            <button type="submit" class="btn-submit">Register</button>
          </div>
        </form>

        <p>Already have an account? <a href="login">Login here</a>.</p>
</main>