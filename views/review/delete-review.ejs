<main id="delete-review">
  <%- messages() %>

    <% if (errors) { %>
      <ul class="notice">
        <% errors.array().forEach(error=> { %>
          <li class="flash-message notice error">
            <%= error.msg %>
          </li>
          <% }) %>
      </ul>
      <% } %>

        <% if (title) { %>
          <h1>
            <%= title %>
          </h1>
          <% } else { %>
            <%- res.redirect('/') %>
              <% } %>
                <h3>Are you sure you want to delete this review?</h3>
                <form action="/review/delete-review" method="POST">
                  <input type="hidden" name="review_id" value="<%= locals.review_id %>">
                  <button type="submit" class="btn-submit">Yes, Delete</button>
                  <a href="/inv/detail/<%= inv_id %>">Cancel</a>
                </form>
</main>