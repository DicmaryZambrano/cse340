<main id="add-classification">
  <%- messages() %>

    <% if (errors) { %>
      <ul class="notice">
        <% errors.array().forEach(error=> { %>
          <li class="flash-message notice error">
            <%= error.msg %>
          </li>
          <% }) %>
      </ul>
      <% } %>

        <% if (title) { %>
          <h1>
            <%= title %>
          </h1>
          <% } else { res.redirect('/') } %>

            <form action="/inv/add-classification" method="POST" class="classification-form">
              <div class="form-group">
                <label for="classification_name">New Classification Name:</label>
                <input type="text" id="classification_name" name="classification_name" pattern="^[a-zA-Z0-9]+$"
                  required>
              </div>
              <div class="form-group">
                <button type="submit" class="btn-submit">Add Classification</button>
              </div>
            </form>
</main>